<div class="container mt-5">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% products.forEach(product=>{ %>
            <tr>
                <th scope="row"><%- product.id %></th>
                <td><%- product.title %></td>
                <td><%- product.price %></td>
                <td>
                    <button type="button" data-product="<%= JSON.stringify(product) %>" class="btn btn-primary add-to-cart">Add to Cart</button>
                </td>
            </tr>
        <% }) %>

        </tbody>
    </table>
</div>

<form id="cart-form" method="post" action="<%- sails.getUrlFor('CartController.submit') %>">
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
    <div id="cart-values">
    </div>
</form>
